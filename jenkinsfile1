pipeline {
    environment{
        FNAME = "JOHN"
    }
    agent any
    stages{
        stage('checkout code'){
            steps{
                git url:"https://github.com/Ramyagowthami/pipeline/"
                echo 'checkout completed'
               sh "echo hello ${FNAME}"
            }
        }
        stage('codecompile'){
            steps{
                echo 'convert high level to machine level'
                sh "mvn compile"
            }
        }
        stage('parallelstage'){
            parallel{
        stage('code testing'){
            steps{
                echo 'test the functionality of the code'
                echo 'test case getting executed'
                sh "mvn test"
            }
        }
        stage('quality assurance'){
            steps{
                echo 'checking the quality and bug in the code'
                sh "mvn pmd:pmd"
                echo 'code analysis done'
                recordIssues(tools: [pmdParser()])
                
            }
        }
        }
        }
        stage('package the code'){
            when{ expression {env.GIT_BRANCH == 'origin/dev'}}
            steps{
                echo 'package the code'
                sh "mvn package"
            }
        }
    }
}
